{
  "extends": [
    "config:base",
    "group:monorepos"
  ],
  "packageRules": [
    {
      "packageNames": [
        "@types/react",
        "@types/react-dom"
      ],
      "groupName": "react monorepo"
    },
    {
      "depTypeList": ["action"],
      "semanticCommitType": "ci",
      "semanticCommitScope": "action"
    },
    {
      "matchDatasources": ["docker"],
      "semanticCommitType": "ci",
      "matchPackageNames": ["node"],
      "versioning": "node"
    }
  ],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "pruneBranchAfterAutomerge": true
}
