{
  "name": "tbf-collective",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./mocks ./build/server.js",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "fly:db:proxy:prod": "flyctl proxy 15432:5432 -a tbf-collective-db"
  },
  "prettier": "@justinwaite/prettier-config",
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "3.15.2",
    "@remix-run/express": "1.6.1",
    "@remix-run/node": "1.6.1",
    "@remix-run/react": "1.6.1",
    "@remix-run/server-runtime": "1.6.1",
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "express": "4.18.1",
    "morgan": "1.10.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix-auth": "3.2.2",
    "remix-auth-auth0": "1.3.7",
    "tiny-invariant": "1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "6.3.1",
    "@justinwaite/prettier-config": "1.0.0",
    "@remix-run/dev": "1.6.1",
    "@remix-run/eslint-config": "1.6.1",
    "@testing-library/cypress": "8.0.3",
    "@testing-library/dom": "8.14.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/user-event": "14.2.1",
    "@types/bcryptjs": "2.4.2",
    "@types/compression": "1.7.2",
    "@types/eslint": "8.4.3",
    "@types/express": "4.17.13",
    "@types/morgan": "1.9.3",
    "@types/node": "17.0.45",
    "@types/react": "17.0.47",
    "@types/react-dom": "17.0.17",
    "@vitejs/plugin-react": "1.3.2",
    "autoprefixer": "10.4.7",
    "c8": "7.11.3",
    "cypress": "10.2.0",
    "dotenv": "16.0.1",
    "esbuild": "0.14.47",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "happy-dom": "5.3.1",
    "msw": "0.42.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.11",
    "prisma": "3.15.2",
    "start-server-and-test": "1.14.0",
    "tailwindcss": "3.1.4",
    "ts-node": "10.8.1",
    "tsconfig-paths": "3.14.1",
    "typescript": "4.7.4",
    "vite": "2.9.12",
    "vite-tsconfig-paths": "3.5.0",
    "vitest": "0.16.0"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "node --require tsconfig-paths/register prisma/seed.js"
  }
}
